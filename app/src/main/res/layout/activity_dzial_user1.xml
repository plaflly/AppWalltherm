<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wallpl.example.vvvlad.walltherm.DzialUser1">
    <LinearLayout
        android:layout_margin="25sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/obliczan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="Obliczania"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/nagroda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="nagrody"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/punktyuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="Punkty"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="normal|bold" />

            <Button
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="Korzysci"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>