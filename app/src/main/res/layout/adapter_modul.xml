<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/adaptertModulLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ModuÅ‚y"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Punkty"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/nazwamodulaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/iloscmodUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/iloscPunktowUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                />



            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:layout_marginTop="10sp"
            android:id="@+id/befortextForUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Notatki:"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:id="@+id/textForUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"

            />
        <TextView
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/dataUserModul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <TextView
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/statusModulUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Czeka na potwierdzenie"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:id="@+id/textModulUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>