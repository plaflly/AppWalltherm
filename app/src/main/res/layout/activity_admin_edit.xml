<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wallpl.example.vvvlad.walltherm.AdminEdit"
    android:id="@+id/AdminEdit"
    android:background="@drawable/tlo">
    <LinearLayout
        android:padding="5sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/aDDAdmin"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="WprowadÅº nowego administratora"/>
            <Button
                android:background="@color/colorOrange"
                android:textColor="@color/colorWhite"
                android:id="@+id/oK"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ok"/>
        </LinearLayout>

        <ListView
            android:layout_weight="1"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:id="@+id/listAdminEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>