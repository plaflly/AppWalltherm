<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Komunikaty"
    android:background="@drawable/tlo"
    tools:context="wallpl.example.vvvlad.walltherm.Komunikaty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10sp"
            android:textSize="15sp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:text="Wiadomosci" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorBlack" />

        <Spinner
            android:id="@+id/spinerKomunikat"
            android:layout_width="match_parent"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorBlack" />

        <EditText
            android:id="@+id/tytulKomunikat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz tytuł" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorBlack"
            android:fontFamily="@assets/Signika-SemiBold.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textKomunikat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:gravity="bottom"
                android:hint="Wpisz text" />

            <Button
                android:id="@+id/btnKomunikat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:padding="5sp"
                android:text="Wyślij"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>