<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical"
    android:id="@+id/reglaminAdmin"
    tools:context="wallpl.example.vvvlad.walltherm.ReglaminAdmin">

    <Button
        android:layout_margin="5sp"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:fontFamily="@assets/Signika-SemiBold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnBrowse_Click"
        android:text="Wyszukaj pdf" />

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfViewReg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">

    </com.github.barteksc.pdfviewer.PDFView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_margin="5sp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:id="@+id/btn_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnUpload_Click"
            android:layout_weight="1"
            android:text="Zapisz reglamin" />

        <Button
           android:layout_margin="5sp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:id="@+id/btn_add_picture1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnUpload_Catal"
            android:layout_weight="1"
            android:text="Zapisz katalog" />
        <Button
            android:layout_margin="5sp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:id="@+id/btn_ListaKatalogow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista katalogow"
            android:onClick="btnList"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>