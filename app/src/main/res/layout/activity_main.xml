<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wallpl.example.vvvlad.walltherm.MainActivity"
    android:id="@+id/mainLayout"
    android:background="@drawable/tlo">

    <LinearLayout
        android:id="@+id/layoutparam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textWalltherm"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:background="@drawable/walltherm_logo"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linier1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen"
                android:text="Korzyści, zalety WT"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linier2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen"
                android:text="Policz Walltherm"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linier3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen"
                android:text="gdzie kupić"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linier4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen"
                android:text="Kto Zamontuje"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linier5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGreen"
                android:text="Dla profesjonalisty"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linier6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Polec Znajomemu"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linier7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            >

            <LinearLayout
                android:id="@+id/Linier7_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorOrange"
                    android:textColor="@color/colorWhite"
                    android:text="STRONA WWW"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linier7_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorOrange"
                    android:text="SERWIS KONTAKT"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>