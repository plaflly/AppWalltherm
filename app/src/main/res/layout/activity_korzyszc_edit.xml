<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/korzyszcEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="wallpl.example.vvvlad.walltherm.KorzyszcEdit">

    <Button
        android:id="@+id/wyszukajZalety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@color/colorGreen"
        android:fontFamily="@assets/Signika-SemiBold.ttf"
        android:text="Wyszukaj"
        android:textColor="@color/colorWhite" />

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfViewZalety"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">

    </com.github.barteksc.pdfviewer.PDFView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnZapiszZalety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:text="Zapisz katalog"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>