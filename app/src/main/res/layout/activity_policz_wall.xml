<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/policzWall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical"
    tools:context="wallpl.example.vvvlad.walltherm.PoliczWall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:gravity="center_vertical|center_horizontal"
            android:text="OBLICZ ILOŚĆ MODUŁÓW"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:gravity="center_vertical|center_horizontal"
            android:text="Wpisz powirzchnię użytkową"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_WT1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:gravity="center"
                android:hint="Wpisz tu"
                android:inputType="text|number"
                android:maxLength="4"
                android:text="" />

            <TextView
                android:id="@+id/text_pa3"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:layout_alignTop="@+id/et_WT1"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/text_pa"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="m²"
                android:textColor="@color/colorBlack"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text_pa"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:layout_alignTop="@+id/et_WT1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="=>"
                android:textColor="@color/colorBlack"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="0 WT25"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20dp" />
        </LinearLayout>
<TextView
    android:id="@+id/zlot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:fontFamily="@assets/Signika-SemiBold.ttf"
    android:text="0 PLN"
    android:textAlignment="center"
    android:textColor="@android:color/holo_orange_dark"
    android:textSize="20dp"
    />
        <TextView
            android:id="@+id/text_pswod"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:gravity="center_vertical|center_horizontal"
            android:text="Obliczamy na 6 m² -> 1 moduł"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:gravity="center_vertical|center_horizontal"
            android:text="Potrzebujesz pomocy? Zostaw swój numer telefonu, aby nasz administrator skontaktował się z Tobą:"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            android:layout_marginBottom="10sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nomTel"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:hint="@string/telefon"
                android:inputType="text|number"
                android:maxLength="9" />

            <Button
                android:id="@+id/nomTel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:fontFamily="@assets/Signika-SemiBold.ttf"

                android:text="ok" />


        </LinearLayout>


        <TextView
            android:id="@+id/text_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@assets/Signika-SemiBold.ttf"
            android:gravity="center_vertical|center_horizontal"
            android:text="Pamietaj! Zapotrzebowanie na Pokoj, Kuchnie, Łazienke i Hol obliczamy inaczej. Zglos sie do PROFESJONALISTY:"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_hurt"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="Hurtownie"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_insta"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@color/colorOrange"
                android:fontFamily="@assets/Signika-SemiBold.ttf"
                android:text="INSTALATOR"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>